<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <fastCgi>
            <application fullPath="C:\php\php-cgi.exe" maxInstances="4" idleTimeout="600" activityTimeout="30" requestTimeout="90" instanceMaxRequests="10000" protocol="NamedPipe" flushNamedPipe="False">
                <environmentVariables>
                    <environmentVariable name="PHP_FCGI_MAX_REQUESTS" value="10000" />
                    <environmentVariable name="PHPRC" value="C:\php\" />
                </environmentVariables>
            </application>
        </fastCgi>
        <handlers>
            <add name="PHP-CGI" path="*.php" verb="*" modules="FastCgiModule" scriptProcessor="C:\php\php-cgi.exe" resourceType="File" />
            <add name="PHP-CGI-HTML" path="*.html" verb="*" modules="FastCgiModule" scriptProcessor="C:\php\php-cgi.exe" resourceType="File" />
        </handlers>
    </system.webServer>
</configuration>
